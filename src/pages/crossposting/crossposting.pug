extends ../../layouts/layout.pug

block styles
  link(rel="stylesheet" href="css/crossposting.css")

block variables
  - let title = "Кросспостинг"

block mixins
  include ../../blocks/status-panel/status-panel
  include ../../blocks/card/card

block scripts
  script(src="js/crossposting.js" defer) 

block content
  template#wrap
    div.cards 
      main
        div.cards__view
      footer.cards__footer
        +status-panel("final")

  template#card 
    +card()
    
  template#slide
    div.card__slide
      img.card__img





  template#modalPost
    div.mask
      div.modal
        h3.modal__title Пост опубликован.
        p.modal__text Смотрите его эффективность в <a class='modal__link' href='404.html'>статистике</a>
        div.modal__icons
        button.button.button_stretchable.button_beautiful Готово

  template#modalAccaunt
    div.mask
      div.modal
        h3.modal__title Привязать аккаунт
        div.modal__icons
        div.modal-item.modal__item
          input.input(placeholder="введите логин")
          button.button(type="button") Привязать
        div.modal-item.modal__item
          input.input(placeholder="введите пароль")
          button.button(type="button") Привязать
        button.button.button_stretchable.button_beautiful.button_white Назад



  template#modalIcon
    div.modal__icon
      img







  div.crossposting
    header.crossposting__header
      include ../../blocks/social-network-list/social-network-list
    main
      form.crossposting__form#post(name="post")
        div.crossposting__top
          div.crossposting__editor
            include ../../blocks/editor/editor
          div.crossposting__calendar
            include ../../blocks/calendar/calendar

        div.crossposting__files
          include ../../blocks/files/files

    footer.crossposting__footer
      +status-panel()